# Production Environment Configuration for Vercel Deployment
NODE_ENV=production

# Database Configuration (MongoDB Atlas recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kkma_homestyler?retryWrites=true&w=majority

# Frontend URL (update with your deployed frontend URL)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-change-this
JWT_EXPIRE_IN=90d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# MongoDB Configuration
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# Vercel specific
VERCEL=true